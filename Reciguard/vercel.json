{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "reciguard.com" }
      ],
      "destination": "https://www.reciguard.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
}